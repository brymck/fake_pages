<h1>Listing pages</h1>

<table>
  <tr>
    <th>Source</th>
    <th>Ticker</th>
    <th>Date</th>
    <th>Time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.ticker.source.name %></td>
    <td><%= page.ticker.name %></td>
    <td><%= page.created_at.localtime.strftime("%B %-d, %Y") %></td>
    <td><%= page.created_at.localtime.strftime("%-l:%M %P JST") %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

